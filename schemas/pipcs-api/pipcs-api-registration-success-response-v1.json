{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://gitlab.com/dwp/health/pip-apply/schemas/pipcs-api/pipcs-api-registration-success-response-v1.json",
  "type": "object",
  "title": "PIPCS-API registration success response body",
  "description": "Schema describe how PIPCS-api success response",
  "default": {},
  "examples": [
    {
      "pipApplyApplicationId": "string",
      "applicationReference": "string",
      "state": "Submitted",
      "timestamp": "string"
    }
  ],
  "required": [
    "pipApplyApplicationId",
    "applicationReference",
    "state",
    "timestamp"
  ],
  "properties": {
    "pipApplyApplicationId": {
      "$id": "#/properties/pipApplyApplicationId",
      "type": "string",
      "title": "The pipApplyApplicationId schema",
      "description": "PIP-apply application id",
      "default": "",
      "examples": [
        "string"
      ]
    },
    "applicationReference": {
      "$id": "#/properties/applicationReference",
      "type": "string",
      "title": "The applicationReference schema",
      "description": "PIPCS application reference",
      "default": "",
      "examples": [
        "string"
      ]
    },
    "state": {
      "$id": "#/properties/state",
      "type": "string",
      "title": "The state schema",
      "description": "Current application states in PIPCS",
      "default": "",
      "examples": [
        "Submitted"
      ],
      "enum": [
        "Submitted",
        "Decision Made",
        "Withdrawn",
        "Submitting",
        "Submit Failed",
        "Cancelled"
      ]
    },
    "timestamp": {
      "$id": "#/properties/timestamp",
      "type": "string",
      "title": "The timestamp schema",
      "description": "Application state timestamp",
      "default": "",
      "examples": [
        "string"
      ]
    }
  },
  "additionalProperties": false
}
