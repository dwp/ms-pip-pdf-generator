{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://gitlab.com/dwp/health/pip-apply/schemas/registration/nationality.schema.1.1.0.json",
  "description": "Schema to describe a nationality, which could comprise British, or a nationality from either the EEA or the rest of the world",
  "title": "nationality",
  "type": "string",
  "oneOf": [
    {
      "description": "A list of UK nationalities",
      "type": "string",
      "enum": [
        "British"
      ]
    },
    { "$ref": "eea-nationality.schema.1.0.0.json" },
    { "$ref": "rest-of-world-nationality.schema.1.1.0.json" }
  ]
}
